<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="con1" class="book.ch7.allproperties.ConstrctorEmp">
        <constructor-arg name="id" value="1"></constructor-arg>
        <constructor-arg name="name" value="cheng"></constructor-arg>
        <constructor-arg name="salary" value="10000"></constructor-arg>
    </bean>

    <bean id="con2" class="book.ch7.allproperties.ConstrctorEmp">
        <constructor-arg index="0" value="2"></constructor-arg>
        <constructor-arg index="1" value="zhang"></constructor-arg>
    </bean>

    <bean id="con3" class="book.ch7.allproperties.ConstrctorEmp">
        <constructor-arg index="0" value="2"></constructor-arg>
        <constructor-arg index="1" value="25.5"></constructor-arg>
    </bean>
</beans>